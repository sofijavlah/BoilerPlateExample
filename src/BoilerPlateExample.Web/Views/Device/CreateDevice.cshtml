@model BoilerPlateExample.Dto.Device.DevicePost

@{
    ViewBag.Title = "Create new device";
    var list = ViewBag.DropDown as SelectList;
}

<h3>@ViewBag.Title</h3>

<form action="" method="post">

    @Html.HiddenFor(x => x.Id)
    <br />
    @Html.LabelFor(x => x.Name, "Name:")
    &nbsp;
    @Html.EditorFor(x => x.Name)
    <br />
    @Html.LabelFor(x => x.EmployeeId, "Employee:")
    &nbsp;
    @Html.DropDownListFor(x => x.EmployeeId, (IEnumerable<SelectListItem>)list, "-- Choose Employee --")
    <br />

    <input type="submit" value="Create Device" />

</form>