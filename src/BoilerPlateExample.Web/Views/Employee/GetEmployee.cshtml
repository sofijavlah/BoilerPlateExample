@model BoilerPlateExample.Dto.Employee.EmployeeGet

@{
    ViewBag.Title = "Employee details";
}

<h3>@ViewBag.Title</h3>

@if (Model != null)
{
    @Html.TextBoxFor(x => x.FirstName)
    @Html.TextBoxFor(x => x.LastName)
    @Html.TextBoxFor(x => x.Description)

    @using (Html.BeginForm("GetEmployeeHistory", "Employee", new { id = Model.Id }))
    {<button type="submit" name="Usage History" value="Get">Get</button>}
}
else
{
    <form action="" method="get">

        <label>Insert Id</label>
        &nbsp;
        <input type="text" name="Id" placeholder="Id" />
        &nbsp;
        <input type="submit" value="Get Employee" />

    </form>
}